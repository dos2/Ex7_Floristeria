<Window x:Class="_7Ex_Floristeria.InputFloristeria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7Ex_Floristeria"
        mc:Ignorable="d"
        Title="Crear Floristeria" Height="250" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF95A99F" Offset="0"/>
                <GradientStop Color="#FF1B6842" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="Name" Height="23" Margin="0,0,-1,0" TextWrapping="Wrap" Text="Floristeria1" VerticalAlignment="Center" Width="120" UndoLimit="103" HorizontalAlignment="Center"/>
        <Label Content="Elige un nombre para tu Floristería" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btnCreate" Content="Crear" HorizontalAlignment="Center" Margin="0,163,0,0" VerticalAlignment="Top" Width="75" Background="#FFC1D8D7" Click="btnCreate_Click"/>

    </Grid>
</Window>
